<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h3>User info</h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= image_tag user.get_profile_image(100, 100) %>
    </div>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-sm btn-block' do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>
</div>
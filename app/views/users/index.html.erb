<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="row">
        <%= render "users/info", user: current_user %>
      </div>
      <div class="row">
        <%= render "books/new", book: @book %>
      </div>
    </div>
    <div class="col-6">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th></th>
            <th>name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td></td>
              <td><%= user.name %></td>
              <td></td>
              <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>